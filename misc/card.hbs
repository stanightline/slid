<div class="card{{#if colour}} {{colour}}{{/if}}{{#if brightness}} {{brightness}}{{/if}}{{#each tags}} {{this}}{{/each}}"{{#style}} style="{{style}}"{{/style}}>
  {{#if image}}
    <div class="card-image">
      <img src="{{src}}"{{#if style}} style="{{style}}"{{/if}}>
      {{#if ../title}}<span class="card-title {{../title.colour}}-text {{#if ../title.brightness}}text-{{../title.brightness}}{{/if}}">{{../title.text}}</span>{{/if}}
    </div>
  {{/if}}

  <div class="card-content">
    {{#if title}}{{#with title}}<span class="card-title {{colour}}-text {{#if brightness}}text-{{brightness}}{{/if}}">{{text}}</span>{{/with}}{{/if}}
    {{#with content}}<p class="{{colour}}-text {{#if brightness}}text-{{brightness}}{{/if}}">{{text}}</p>{{/with}}
  </div>

  {{#if actions}}
    <div class="card-action">
      {{#each actions.urls}}<a href="{{url}}">
        <span class="{{#if @root.title.colour}} {{@root.title.colour}}-text{{/if}}{{#if @root.title.brightness}} text-{{@root.title.brightness}}{{/if}}">{{text}}</span>
      </a>{{/each}}
    </div>
  {{/if}}
</div>